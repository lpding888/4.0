# ================================
# AI照后端 - 开发环境变量示例
# ================================
# 艹！复制此文件为 .env 并填入真实值
# cp .env.dev.example .env

# ========== 应用配置 ==========
NODE_ENV=development
PORT=3000

# ========== 数据库配置 ==========
DB_HOST=mysql
DB_PORT=3306
DB_USER=dev_user
DB_PASSWORD=dev_password
DB_NAME=ai_photo

# ========== Redis配置 ==========
REDIS_HOST=redis
REDIS_PORT=6379

# ========== JWT密钥 ==========
JWT_SECRET=dev_jwt_secret_change_in_production
JWT_EXPIRES_IN=7d

# ========== 腾讯云COS配置（开发环境可选） ==========
COS_SECRET_ID=your_secret_id_here
COS_SECRET_KEY=your_secret_key_here
COS_BUCKET=ai-photo-dev-1234567890
COS_REGION=ap-guangzhou

# ========== 微信支付配置（开发环境可选） ==========
WECHAT_APPID=your_appid_here
WECHAT_MCHID=your_mchid_here
WECHAT_API_V3_KEY=your_api_v3_key_here
WECHAT_SERIAL_NO=your_serial_no_here

# ========== AI服务配置（开发环境可选） ==========
RUNNING_HUB_API_KEY=your_api_key_here

# ========== 日志配置 ==========
LOG_LEVEL=debug
