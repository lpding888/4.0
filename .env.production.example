# ========== 数据库配置 ==========
DB_USER=prod_user
DB_PASSWORD=YOUR_STRONG_DB_PASSWORD_HERE  # 艹！必须改成强密码
DB_NAME=ai_photo
MYSQL_ROOT_PASSWORD=YOUR_STRONG_ROOT_PASSWORD_HERE  # 艹！MySQL root密码

# ========== Redis配置 ==========
REDIS_PASSWORD=YOUR_STRONG_REDIS_PASSWORD_HERE  # 艹！必须设置

# ========== JWT密钥 ==========
# 艹！生成强密钥：openssl rand -base64 64
JWT_SECRET=YOUR_STRONG_JWT_SECRET_HERE

# ========== 腾讯云COS配置 ==========
COS_SECRET_ID=AKIDxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
COS_SECRET_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
