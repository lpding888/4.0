WECHAT_MCHID=1234567890
WECHAT_API_V3_KEY=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
WECHAT_SERIAL_NO=XXXXXXXXXXXXXXXXXXXXX

# ========== 微信登录配置 ==========
WECHAT_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ========== AI服务配置 ==========
